{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<section class="position-relative pb-0">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="text-center">
					<form name="pms_login" id="pms_login" method="post">

						<h4>Connexion</h4>
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<div class="mb-3">
							Use Username = "admin" and Password = "password"
						</div>

						<p class="login-username">
							<label for="inputUsername">Username</label>
							<input type="text" id="inputUsername" placeholder="admin" name="username" value="{{ last_username }}" class="input" size="20" autocomplete="username" required autofocus>
						</p>
						<p class="login-password">
							<label for="inputPassword">Password</label>
							<input type="password" name="password" id="inputPassword" placeholder="password" class="input" size="20" autocomplete="current-password" required>
						</p>
						<p class="login-submit">
							<input type="submit" name="wp-submit" id="wp-submit" class="button button-primary"
							       value="Valider">
						</p>
						<input type="hidden" name="_csrf_token"
						       value="{{ csrf_token('authenticate') }}"
						>
					</form>
					{% endblock %}
